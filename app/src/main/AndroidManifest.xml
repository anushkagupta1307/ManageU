        <activity
            android:name=".FocusTimer.PopupActivity"
            android:exported="false" />
        <activity
            android:name=".FocusTimer.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".ScratchCardUI"
            android:exported="false" />
        <activity
            android:name=".UsageStatsActivity"
